<UserControl x:Class="PuckevichPlayer.Controls.AudioEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:PuckevichPlayer.Converters"
             xmlns:sampleData="clr-namespace:PuckevichPlayer.Controls.SampleData"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             Padding="10 0 0 0"
             d:DataContext="{Binding Source={StaticResource StubAudioModel}}"
             d:DesignWidth="478" 
             Style="{StaticResource AudioEntryControlStyle}">
    <UserControl.Resources>
        <ResourceDictionary>
            <sys:Double x:Key="ThisHeight">85</sys:Double>
            <sampleData:StubAudioModel x:Key="StubAudioModel"/>
            <conv:IntToDurationConverter x:Key="IntToDurationConverter" />
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <Storyboard x:Key="SlidInPlaybackBarAnimation">
                <ThicknessAnimation 
                            Storyboard.TargetProperty="Margin"
                            To="0 50 0 0"
                            Completed="SlidInPlaybackBarAnimation_OnCompleted"
                            Duration="0:0:1" FillBehavior="Stop">
                    <ThicknessAnimation.EasingFunction>
                        <SineEase EasingMode="EaseIn"></SineEase>
                    </ThicknessAnimation.EasingFunction>
                </ThicknessAnimation>
            </Storyboard>
            <Storyboard x:Key="SlidOutPlaybackBarAnimation">
                <ThicknessAnimation 
                            Storyboard.TargetProperty="Margin"
                            To="0 0 0 0" 
                            Completed="SlidOutPlaybackBarAnimation_OnCompleted"
                            Duration="0:0:1" FillBehavior="Stop">
                    <ThicknessAnimation.EasingFunction>
                        <SineEase EasingMode="EaseOut"></SineEase>
                    </ThicknessAnimation.EasingFunction>
                </ThicknessAnimation>
            </Storyboard>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary 
                  Source="AudioEntryStyles.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Width="6" Margin="-12 0 0 0" 
                BorderThickness="0"
                Height="{StaticResource ThisHeight}"
                Style="{StaticResource CurrentTrackBorderStyle}">
        </Border>
        <Border HorizontalAlignment="Left" 
                Margin="-6 0 0 0"
                Height="{StaticResource ThisHeight}"
                BorderThickness="0" VerticalAlignment="Top" Background="{StaticResource ThatLightGrayColorBrush}"
                Style="{StaticResource DownloadedProgressBorderStyle}">
        </Border>
        <Border BorderThickness="0 0 0 1" Background="Transparent" 
                BorderBrush="{StaticResource ThatLightGrayColorBrush}"
                Name="PlaybackBorder"
                Height="{StaticResource ThisHeight}">
            <Border.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AudioState}" 
                                     Value="Playing">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource SlidInPlaybackBarAnimation}" />
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding AudioState}" 
                                     Value="Stopped">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource SlidOutPlaybackBarAnimation}" />
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
        <Border BorderThickness="0 0 0 0" 
                VerticalAlignment="Top">
            <Grid Margin="0 0 0 0" Height="{StaticResource ThisHeight}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Title}"
                       Margin="0 4 0 -1"
                       FontWeight="SemiBold"
                       Style="{StaticResource AudioNameText}" />
                <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="{Binding Artist}"
                       Margin="0 -1 0 4"
                       FontSize="20"
                       Style="{StaticResource AudioNameText}" />
                <Grid Grid.Row="0" 
                                Grid.RowSpan="2" 
                                Grid.Column="1">
                    <ContentControl 
                                    Style="{StaticResource AudioEntryPlayPauseRightIndicator}" />
                    <TextBlock 
                           Text="{Binding Duration, Converter={StaticResource IntToDurationConverter}}"
                           FontSize="25"
                           Foreground="{StaticResource ThatGrayColorBrush}" 
                           Style="{StaticResource AudiEntryDurationStyle}" />
                    <TextBlock Text="Cached"
                               FontSize="14"
                               FontWeight="Light"
                               Visibility="{Binding IsCached, Converter={StaticResource BoolToVisibilityConverter}}"
                               Foreground="{StaticResource ThatGrayColorBrush}"
                               Margin="0 0 4 0"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
